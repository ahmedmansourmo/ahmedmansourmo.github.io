---
import skills from "../data/skills.json";
import Section from "./Section.astro";
const heading = "My Skills"
---
<Section>
	<h2>{heading}</h2>
	<div class="skills-container">
		{Object.entries(skills).map(([category, skillList]) => (
			<div class="skill-category">
				<h3>{category}</h3>
				<ul>
					{skillList.map((skill, i) => (
						<li class="skill-item" style={`--i:${i}`}>
							{skill}
						</li>
					))}
				</ul>
			</div>
		))}
	</div>
</Section>

<style>
.skills-container {
	display: flex;
	flex-direction: column;
	gap: 1.5rem;
	flex-wrap: wrap;
	justify-content: center;
	margin-top: 1rem;
}
h2 {
        margin: 0;
        font-size: 32px;
        color: var(--dark);
        font-weight: 600;
        font-family: var(--font-heading);
    }
.skill-category {
	background: var(--surface, #ffffff);
	border-radius: 8px;
	box-shadow: 0 6px 18px rgba(2,6,23,0.06);
	padding: 1rem 1.25rem;
	min-width: 220px;
	flex: 1;
	transition: transform 0.25s ease, box-shadow 0.25s ease;
}
.skill-category:hover { transform: translateY(-6px); box-shadow: 0 10px 30px rgba(2,6,23,0.09); }
.skill-category h3 { margin: 0 0 0.75rem 0; text-align: center; color: var(--accent, #0b7285); }
.skill-category ul { list-style: none; padding: 0; margin: 0; display: flex; flex-wrap: wrap; gap: 0.45rem; }
.skill-item {
	display: inline-block;
	padding: 0.45rem 0.75rem;
	border-radius: 8px;
	background: rgba(11,114,133,0.06);
	color: #024055;
	font-size: 0.98rem;
	transform: translateY(12px);
	opacity: 0;
	animation: fadeUp 420ms forwards cubic-bezier(.2,.9,.2,1);
	animation-delay: calc(var(--i) * 80ms);
	transition: transform 220ms cubic-bezier(.2,.9,.2,1),
		background-color 220ms ease, color 220ms ease, box-shadow 220ms cubic-bezier(.2,.9,.2,1);
	will-change: transform, opacity;
	cursor: default;
}
@keyframes fadeUp { to { transform: translateY(0); opacity: 1; } }

/* hover / focus animation for each skill chip */
.skill-item:hover,
.skill-item:focus {
	transform: translateY(-6px) scale(1.03);
	box-shadow: 0 10px 20px rgba(2,6,23,0.12);
	background: var(--accent, #0b7285);
	color: #ffffff;
	outline: none;
}
.skill-item:active { transform: translateY(-2px) scale(0.995); }

/* make the animation accessible for users who prefer reduced motion */
@media (prefers-reduced-motion: reduce) {
	.skill-item { animation: none !important; transition: none !important; transform: none !important; opacity: 1 !important; }
}

/* small responsive tweak */
@media (max-width: 640px) {
	.skills-container { gap: 1rem; }
	.skill-category { min-width: 100%; }
}
</style>