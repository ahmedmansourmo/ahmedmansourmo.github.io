---
import Layout from "../layouts/Layout.astro";
import Section from "../components/Section.astro";
---

<Layout>
  <Section>
    <div class="error-page">
      <div class="error-content">
        <h1 class="error-code">404</h1>
        <h2 class="error-title">Page Not Found</h2>
        <p class="error-description">
          The page you're looking for doesn't exist. It might have been moved, deleted, or you entered the wrong URL.
        </p>
        <div class="error-actions">
          <a href="/" class="button-link primary">Go Home</a>
          <a href="/blog" class="button-link secondary">Visit Blog</a>
          <a href="/projects" class="button-link secondary">View Projects</a>
        </div>
      </div>
      <div class="error-suggestions">
        <h3>Popular Pages:</h3>
        <ul>
          <li><a href="/">Home</a></li>
          <li><a href="/blog">Blog</a></li>
          <li><a href="/projects">Projects</a></li>
          <li><a href="/contact">Contact</a></li>
        </ul>
      </div>
    </div>
  </Section>
</Layout>

<head>
  <title>404 - Page Not Found</title>
  <meta name="description" content="The page you're looking for could not be found." />
</head>

<style>
  .error-page {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    min-height: 400px;
    padding: 40px 0;
  }

  .error-content {
    margin-bottom: 60px;
  }

  .error-code {
    font-size: 120px;
    font-weight: 700;
    color: var(--primary);
    margin: 0;
    line-height: 1;
  }

  .error-title {
    font-size: 32px;
    margin: 20px 0;
    color: var(--dark);
  }

  .error-description {
    font-size: 18px;
    color: var(--light);
    margin-bottom: 40px;
    max-width: 600px;
    line-height: 1.6;
  }

  .error-actions {
    display: flex;
    gap: 20px;
    justify-content: center;
    flex-wrap: wrap;
  }

  .error-suggestions {
    text-align: left;
  }

  .error-suggestions h3 {
    margin-bottom: 20px;
    color: var(--dark);
  }

  .error-suggestions ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .error-suggestions li {
    margin-bottom: 10px;
  }

  .error-suggestions a {
    color: var(--primary);
    text-decoration: none;
    font-weight: 500;
    transition: color 0.2s;
  }

  .error-suggestions a:hover {
    color: var(--dark);
  }

  @media (max-width: 600px) {
    .error-code {
      font-size: 80px;
    }

    .error-title {
      font-size: 24px;
    }

    .error-description {
      font-size: 16px;
      padding: 0 20px;
    }

    .error-actions {
      flex-direction: column;
      align-items: center;
    }
  }
</style>